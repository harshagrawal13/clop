{
    "jespr": {
        "esm2": {
            "num_layers": 6,
            "embed_dim": 320,
            "attention_heads": 20,
            "token_dropout": true,
            "layer_pool_strategy": "weighted",
            "pool_last_n_layers": 3,
            "token_pool_strategy": "mean",
            "layer_pool_weights": null
        },
        "esm_if": {
            "gvp_node_hidden_dim_scalar": 100,
            "gvp_node_hidden_dim_vector":16,
            "encoder_layers": 2,
            "layer_pool_strategy": "weighted",
            "pool_last_n_layers": 2,
            "token_pool_strategy": "mean",
            "layer_pool_weights": null
        },
        "joint_embedding_dim": 256,
        "norm_embedding": true,
        "temperature": 0.07
    },
    "data": {
        "data_dir": "data/",
        "split_ratio": 0.8,    
        "max_seq_len": 200,
        "batch_size": 64,
        "train_shuffle": true,
        "train_num_workers": 1,
        "val_shuffle": false,
        "val_num_workers": 1
    },
    "trainer": {
        "accelerator": "gpu",
        "precision": 32,
        "devices": 1,
        "epochs": 10,
        "log_every_n_steps": 20,
        "enable_progress_bar": false,
        "val_check_interval": 0.2,
        "limit_train_batches": null,
        "overfit_batches": 0,
        "accumulate_grad_batches": 1,
        "stochastic_weight_averaging": true,
        "stochastic_weight_averaging_lr": 1e-2,
        "detect_anomaly": true,
        "grad_clip_val": 1.5,
        "grad_clip_algorithm": "norm"
    },
    "optim": {
        "lr": 1e-3,
        "weight_decay": 0.01,
        "betas": [
            0.9,
            0.999
        ],
        "eps": 1e-8
    },
    "meta": {
        "project_name": "jespr_config_new",
        "run_name": null,
        "logs_dir": "logs/"
    }
}